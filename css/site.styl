@import "sanitize"
@import "helpers"

// VARIABLES

$margin-basic = 40px
$margin-small = ($margin-basic / 2)
$margin-large = ($margin-basic * 2)

$font-size-basic = 15px
$font-size-small = 10px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)

// TYPOGRAPHY

body
  font-family:helvetica,arial,sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

p
  margin-bottom: 1em


// LINKS

a,a:active,a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    opacity:.5


// BASIC

html
  background-color: $color-black-soft
  color: $color-white-soft

html, body, #main-content
  height: 100%

img
  max-width: 100%
  height: auto

#main-content
  box-sizing: border-box
  padding: $margin-large

// NAVS

nav
  text-transform: uppercase
  font-size: $font-size-small
  color: gray
  z-index: 999
  box-sizing: border-box
  padding: $margin-small
  &:hover
    cursor: pointer
    background-color: rgba(255,255,255,0.8)

#nav-title
  position: absolute
  top: 0
  left: 0

#nav-captions
  position: absolute
  bottom: 0
  left: 0

#nav-audio
  position: absolute
  bottom: 0
  right: 0

// LAYOUT

#holder
  margin: 0 auto
  max-width: 100%

// PLAYER

#player-wrapper
  position: relative
  padding-bottom: 56.25%
  height: 0

#player
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%

#player-caption
  display: none
  width: 100%
  position: absolute
  bottom: $margin-basic
  font-size: $margin-basic
  line-height: $font-leading-basic
  font-style: italic
  font-weight: 700
  -webkit-text-stroke: 1px yellow
  color: black
